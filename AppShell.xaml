<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Referidos"
        x:Class="Referidos.AppShell"
       Shell.FlyoutBehavior="Flyout">

    <!-- Home y RegistroUsuarioPage tienen flecha de navegación -->
    <TabBar>
        <Tab Title="Home">
            <ShellContent Route="HomePage" ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Registro">
            <ShellContent Route="RegistroUsuarioPage" ContentTemplate="{DataTemplate local:Views.RegistroUsuarioPage}" />
        </Tab>
    </TabBar>

    <!-- PrincipalPage aparece en el menú de hamburguesa (flyout) -->
    <FlyoutItem Title="Principal" Icon="icon_principal.png">
        <ShellContent Route="PrincipalPage" ContentTemplate="{DataTemplate local:Views.PrincipalPage}" />
    </FlyoutItem>

</Shell>
